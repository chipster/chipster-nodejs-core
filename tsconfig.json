{
  "include": ["src/**/*"],
  "compilerOptions": {
    // recommended options in https://www.typescriptlang.org/docs/handbook/modules/guides/choosing-compiler-options.html#im-writing-a-library
    "module": "node16",
    "target": "es2020",
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    // keep generated files in separate folder
    "outDir": "./lib"
  }
}
